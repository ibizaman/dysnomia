# Shows the usage of this command to the user

showUsage()
{
    cat <<EOF
Usage: $0 userfile
  or: $0 userdir

The command `dysnomia-delusers' automatically deletes users from configuration
files consisting of key=value pairs.

Options:
  -h, --help                 Shows the usage of this command
  -v, --version              Shows the version of this command
EOF
}

showVersion()
{
    cat <<EOF
$0 (@PACKAGE_NAME@ @PACKAGE_VERSION@)

Copyright (C) 2009-2020 Sander van der Burg
EOF
}

deleteUser()
{
    local userfile="$1"

    username="$(basename "$userfile")"

    if pw user show "$username" > /dev/null
    then
        pw user del "$username"
    fi
}

# Autoconf settings

export prefix=@prefix@
export exec_prefix=@exec_prefix@

# Parse valid argument options

PARAMS=`@getopt@ -n $0 -o hv -l help,version -- "$@"`

if [ $? != 0 ]
then
    showUsage
    exit 1
fi

# Evaluate valid options

eval set -- "$PARAMS"

while [ "$1" != "--" ]
do
    case "$1" in
        -h|--help)
            showUsage
            exit 0
            ;;
        -v|--version)
            showVersion
            exit 0
            ;;
    esac

    shift
done

shift

# Validate parameters

path="$1"

if [ ! -e "$path" ]
then
    echo "ERROR: The path: $path is not valid!" >&2
    exit 1
fi

# Execute operation

target="$path/dysnomia-support/users"

if [ -f "$path" ]
then
    deleteUser "$path"
elif [ -d "$target" ]
then
    ls $target/* | while read userfile
    do
        deleteUser "$userfile"
    done
fi
